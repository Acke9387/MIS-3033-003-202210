<Window x:Class="JSON_ChuckNorris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_ChuckNorris"
        mc:Ignorable="d"
       Title="Chuck Norris Jokes" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="https://www.idgcdn.com.au/article/images/740x500/dimg/m_img_24826.jpg"/>
    </Window.Background>
    <Grid>
        <GroupBox Header="Select a Category" Margin="39,61,529,296" Background="#3FFFFFFF" Foreground="#FFEA1111">
            <ComboBox x:Name="cboCategories" HorizontalAlignment="Left" Margin="10,0,0,0" Width="198"/>
        </GroupBox>
        <TextBox x:Name="txtJoke" HorizontalAlignment="Left" Margin="155,198,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="520" Height="179" Background="#A52A97C5" Foreground="White" FontSize="16"/>
        <Button x:Name="btnGetJoke" Content="Get Joke" HorizontalAlignment="Left" Margin="35,0,0,0" VerticalAlignment="Center" Height="105" Width="115">
            <Button.Background>
                <ImageBrush ImageSource="https://m.media-amazon.com/images/I/61rt+dzyi9L._AC_.jpg"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
